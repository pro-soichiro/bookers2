<h2>User info</h2>
<%= attachment_image_tag @user, :image, :fill, 300, 300, format: 'jpeg',fallback:"no_image.jpg" %>
<table>
  <tbody>
    <tr>
  	  <th>name</th>
  	  <th><%= @user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to"Edit/User",edit_user_path %>

<h2>New book</h2>
<%= form_with model:@user,local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :opinion %>
  <%= f.submit"Create Book" %>
<% end %>