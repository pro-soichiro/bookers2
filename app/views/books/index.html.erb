<div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <th><%= attachment_image_tag @user,:profile_image,:fill,60,60,format:'jpeg',fallback:"no_image.jpg",size:"60x60"%></th>
      </tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if @user.id == current_user.id %>
    <%= link_to edit_user_path(@user) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_20748" do %><% end %>
  <% end %>
  <h2 class="mt-3">New book</h2>
  <%= form_with model:@book,local:true do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit"Create Book",class:"btn btn-success" %>
    </div>
  <% end %>
</div>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= attachment_image_tag book.user,:profile_image,:fill,60,60,format:'jpeg',fallback:"no_image.jpg",size:"60x60"%>
          
        <% end %>
      </td>
      <td><%= link_to"#{book.title}",book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

